@model Hospital.Models.Appointment

<h2>Delete Appointment</h2>

<div>
    <h4>Are you sure you want to delete this appointment?</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">PatientId</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>

        <dt class="col-sm-2">DoctorId</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>