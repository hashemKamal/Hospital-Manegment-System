@model Hospital.Models.Appointment

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="DoctorId"></label>
        <input asp-for="DoctorId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
