@model Hospital.Models.Prescription

<h2>Delete Prescription</h2>

<div>
    <h4>Are you sure you want to delete this prescription?</h4>
    <p>AppointmentId: @Model.AppointmentId</p>
    <p>Medicine: @Model.Medicine</p>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>